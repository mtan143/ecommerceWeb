@model IEnumerable<EcommerceWeb.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<style>
    a {
        color: black;
    }
    a:hover {
        color: lightgray;
        text-decoration: none
    }
    #proItem {
        border: solid 1px;
        margin-left: 5px;
        padding: 20px;
    }
    .btnDelete {
        margin: 5px 0 0 0 ;
        background-color: black;
        color: white;
        text-align: center;
        padding: 5px;
    }
    .btn-delete{
        color: white;
    }
    table, th, tr, td {
        border: none !important;
    }
    .btn-edit {
        color: white;
    }
    .btnEdit{
        margin: 15px 0 0 0;
        background-color: black;
        color: white;
        text-align: center;
        padding: 5px;
    }
    .button {
        display: block;
        background-color: #000000;
        width: 93px;
        height: 24px;
        line-height: 24px;
        margin: auto;
        color: #fff;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        cursor: pointer;
        overflow: hidden;
        border-radius: 5px;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, .3);
        transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
    }

        .button span, .button .icon {
            display: block;
            height: 100%;
            text-align: center;
            position: absolute;
            top: 0;
        }

        .button span {
            width: 72%;
            line-height: inherit;
            font-size: 12px;
            text-transform: uppercase;
            left: 0;
            transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
        }

            .button span:after {
                content: '';
                background-color: white;
                width: 2px;
                height: 70%;
                position: absolute;
                top: 15%;
                right: -1px;
            }

        .button .icon {
            width: 28%;
            right: 0;
            transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
        }

            .button .icon .fa {
                font-size: 18px;
                vertical-align: middle;
                transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4), height 0.25s ease;
            }

            .button .icon .fa-arrow-rotate-back, .button .icon .fa-plus {
                height: 21px;
            }

            .button .icon .fa-check {
                display: none;
            }

        .button.success span, .button:hover span {
            left: -72%;
            opacity: 0;
        }

        .button.success .icon, .button:hover .icon {
            width: 100%;
        }

            .button.success .icon .fa, .button:hover .icon .fa {
                font-size: 28px;
            }

        .button.success {
            background-color: #27ae60;
        }

            .button.success .icon .fa-arrow-rotate-back, .button.success .icon .fa-plus {
                display: none;
            }

            .button.success .icon .fa-check {
                display: inline-block;
            }

        .button:hover {
            opacity: 0.9;
        }

            .button:hover .icon .fa-arrow-rotate-back, .button:hover .icon .fa-plus {
                height: 46px;
            }

        .button:active {
            opacity: 1;
        }
</style>

<div class="container" style="font-size: 10px; margin-bottom: 50px">
    @* <a href="/KhachHang/Create" title="Add New User" class="btn-create" style="float: right; margin-top: 50px;"><i class="fa fa-plus-circle fa-2x" style="color: black"></i></a>
        <a href="/Admin/Index" title="Dashboard" class="btn-create" style="float: right; margin-top: 50px; margin-right: 10px"><i class="fa fa-arrow-left fa-2x" style="color: black"></i></a>*@
    <div style="position:absolute; top:150px">
        <a class="button" href="/Admin/Index" role="button">
            <span>Back</span>
            <div class="icon">
                <i class="fa fa-arrow-rotate-back"></i>

            </div>
        </a>


    </div>
    <div style="position:absolute; top:180px">
        <a class="button" href="/MatHang/Create" role="button">
            <span>ADD</span>
            <div class="icon">
                <i class="fa fa-plus"></i>

            </div>
        </a>
    </div>
    <h2 style="text-align: center; margin-top: 150px;">USER MANAGEMENT</h2>

    <div class="row" style="margin-top: 75px">
        @foreach (var item in Model)
        {
            <div id="proItem" class="col-md-3">
                <table class="table">
                    <tr>
                        <th scope="row">Name</th>
                        <td>@item.TenKH</td>
                    </tr>
                    <tr>
                        <th scope="row">Address</th>
                        <td>@item.DiaChi</td>
                    </tr>
                    <tr>
                        <th scope="row">Phone</th>
                        <td>@item.DienThoai</td>
                    </tr>
                    <tr>
                        <th scope="row">Username</th>
                        <td>@item.Username</td>
                    </tr>
                    <tr>
                        <th scope="row">Password</th>
                        <td>@item.Password</td>
                    </tr>
                </table>
                <div class="btnEdit">
                    @Html.ActionLink("Edit", "Edit", new { id = item.KhachHangID }, new { @class = "btn-edit" })
                </div>
                <div class="btnDelete">
                    @Html.ActionLink("Delete", "Delete", new { id = item.KhachHangID }, new { @class = "btn-delete" })
                </div>
            </div>
        }
    </div>
</div>



