@model EcommerceWeb.Models.KhachHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<style>
    a {
        color: black;
    }

        a:hover {
            color: lightgray;
            text-decoration: none
        }
    .btn-default {
        color: white;
        background-color: black;
        border-radius: 0px;
        margin: 5px;
        border: none
    }
        .btn-default:hover {
            color: white;
            background-color: black;
            border-radius: 0px;
            margin: 5px;
            border: none
        }

    .form-control {
        border-radius: 0px;
    }
    .child {
        display: inline-block;
        vertical-align: middle;
        margin-left: 5px;
    }
</style>
<div class="container" style="margin-top: 100px">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KhachHangID)
        @Html.HiddenFor(model => model.Username)
        @Html.HiddenFor(model => model.Password)

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Address</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Phone</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10" style="margin-top: 30px">
                <div class="col-md-offset-2 child">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
                <div class="col-md-offset-2 child">
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>

        </div>
    </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
