        .button {
            display: block;
            background-color: #000000;
            width: 92px;
            height: 26px;
            line-height: 27px;
            margin: auto;
            color: #fff;
            position: absolute;
            top: 16px;
            bottom: 0;
            left: 290px;
            right: 0;
            cursor: pointer;
            overflow: hidden;
            border-radius: 5px;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, .3);
            transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
        }

        .button span, .button .icon {
            display: block;
            height: 100%;
            text-align: center;
            position: absolute;
            top: 0;
        }

        .button span {
            width: 72%;
            line-height: inherit;
            font-size: 12px;
            text-transform: uppercase;
            left: 0;
            transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
        }

            .button span:after {
                content: '';
                background-color: white;
                width: 2px;
                height: 70%;
                position: absolute;
                top: 15%;
                right: -1px;
            }

        .button .icon {
            width: 28%;
            right: 0;
            transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
        }

            .button .icon .fa {
                font-size: 16px;
                vertical-align: middle;
                transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4), height 0.25s ease;
            }

            .button .icon .fa-arrow-rotate-back, .button .icon .fa-plus {
                height: 21px;
            }

            .button .icon .fa-check {
                display: none;
            }

        .button.success span, .button:hover span {
            left: -72%;
            opacity: 0;
        }

        .button.success .icon, .button:hover .icon {
            width: 100%;
        }

            .button.success .icon .fa, .button:hover .icon .fa {
                font-size: 28px;
            }

        .button.success {
            background-color: #27ae60;
        }

            .button.success .icon .fa-arrow-rotate-back, .button.success .icon .fa-plus {
                display: none;
            }

            .button.success .icon .fa-check {
                display: inline-block;
            }

        .button:hover {
            opacity: 0.9;
        }

            .button:hover .icon .fa-arrow-rotate-back, .button:hover .icon .fa-plus {
                height: 46px;
            }

        .button:active {
            opacity: 1;
        }

