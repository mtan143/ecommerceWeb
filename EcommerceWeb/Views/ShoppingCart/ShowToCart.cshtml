        text-align: center;
        position: relative

    }
    .track .step.active:before {
        background: black;

    }
    .track .step::before {
        height: 7px;
        position: absolute;
        content: "";
        width: 100%;
        left: 0;
        top: 18px

    }
    .track .step.active .icon {
        background: black;
        color: #fff

    }
    .track .icon {
        display: inline-block;
        width: 40px;
        height: 40px;
        line-height: 40px;
