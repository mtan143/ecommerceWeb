@model IEnumerable<EcommerceWeb.Models.MatHang>
@using System.Globalization;
@{
    CultureInfo cul = CultureInfo.GetCultureInfo("vi-VN");
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        div.gallery img {
            width: 150px;
            height: 150px;
            margin: 30px;
            display: inline-block;
        }


        div.gallery {
            margin-left: 30px;
            width: auto;
            height: auto;
            display: inline-block;
            background-color: #E7E7E7;
        }
        #proItem {
            margin-left: 5px;
            padding: 20px;
        }

        .btnDelete {
            background-color: black;
            color: white;
            text-align: center;
            padding: 5px;
        }

        .btn-delete {
            color: white;
        }

        table, th, tr, td {
            border: none !important;
        }

        .btn-edit {
            color: white;
        }

        .btnEdit {
            background-color: black;
            color: white;
            text-align: center;
            padding: 5px;
        }
        a {
            color: black;
        }

            a:hover {
                color: lightgray;
                text-decoration: none
            }
          #content-product {
              text-align: left;
          }

        @* -----------------------------------Nút Back and Nút Add------------------------------ *@
        /* Main Styles */
        .button {
            display: block;
            background-color: #000000;
            width: 93px;
            height: 24px;
            line-height: 24px;
            margin: auto;
            color: #fff;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            cursor: pointer;
            overflow: hidden;
            border-radius: 5px;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, .3);
            transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
        }

        .button span, .button .icon {
            display: block;
            height: 100%;
            text-align: center;
            position: absolute;
            top: 0;
        }

        .button span {
            width: 72%;
            line-height: inherit;
            font-size: 12px;
            text-transform: uppercase;
            left: 0;
            transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
        }

            .button span:after {
                content: '';
                background-color: white;
                width: 2px;
                height: 70%;
                position: absolute;
                top: 15%;
                right: -1px;
            }

        .button .icon {
            width: 28%;
            right: 0;
            transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4);
        }

            .button .icon .fa {
                font-size: 18px;
                vertical-align: middle;
                transition: all 0.25s cubic-bezier(0.31, -0.105, 0.43, 1.4), height 0.25s ease;
            }

            .button .icon .fa-arrow-rotate-back, .button .icon .fa-plus{
                height: 21px;
            }

            .button .icon .fa-check {
                display: none;
            }

        .button.success span, .button:hover span {
            left: -72%;
            opacity: 0;
        }

        .button.success .icon, .button:hover .icon {
            width: 100%;
        }

            .button.success .icon .fa, .button:hover .icon .fa {
                font-size: 28px;
            }

        .button.success {
            background-color: #27ae60;
        }

            .button.success .icon .fa-arrow-rotate-back, .button.success .icon .fa-plus {
                display: none;
            }

            .button.success .icon .fa-check {
                display: inline-block;
            }

        .button:hover {
            opacity: 0.9;
        }

            .button:hover .icon .fa-arrow-rotate-back, .button:hover .icon .fa-plus {
                height: 46px;
            }

        .button:active {
            opacity: 1;
        }
 
    </style>
</head>
<body>
    <div class="container" style="margin-bottom: 50px">
        @* <div>
            <a href="/MatHang/Create" title="Add New User" class="btn-create" style="float: right; margin-top: 50px;"><i class="fa fa-plus-circle fa-2x" style="color: black"></i></a>
            <a href="/Admin/Index" title="Dashboard" class="btn-create" style="float: right; margin-top: 50px; margin-right: 10px"><i class="fa fa-arrow-left fa-2x" style="color: black"></i></a>
        </div> *@
        <div style="position:absolute; top:170px">
            <a class="button" href="/Admin/Index" role="button">
                <span>Back</span>
                <div class="icon">
                    <i class="fa fa-arrow-rotate-back"></i>

                </div>
            </a>

           
        </div>
        <div style="position:absolute; top:200px">
            <a class="button" href="/MatHang/Create" role="button">
                <span>ADD</span>
                <div class="icon">
                    <i class="fa fa-plus"></i>

                </div>
            </a>
        </div>
        <h2 style="text-align: center; margin-top: 100px;">PRODUCT MANAGEMENT</h2>
        <div style="text-align: center; margin-top: 100px">
            <div class="form-group">
                <div class="input-group" style="margin: 0 auto; width: 250px;">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                    <input type="text" id="Search" placeholder="Search here..." class="form-control" />
                </div>
            </div>
        </div>

        <div style="text-align:center; margin-top: 60px">

            @foreach (var item in Model)
            {
                <div class="row" style="margin-top: 50px">
                    <div class="col-md-3 gallery">
                        <a>
                            <img class="zoomPic" src="@Url.Content(item.HinhAnh)" alt="ảnh lỗi rồi">
                        </a>
                    </div>
                    <div class="col-md-9">
                        <table class="table">
                            <tr>
                                <th scope="row">Name</th>
                                <td id="content-product">@item.TenMH</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <th scope="row">Price</th>
                                <td id="content-product">$ @item.DonGia.ToString("#,###", @cul.NumberFormat)</td>
                            </tr>
                            <tr>
                                <th scope="row">Type</th>
                                <td id="content-product">@item.LoaiHang.TenLoai</td>
                            </tr>
                            <tr>
                                <th scope="row">Manufacture Date</th>
                                <td id="content-product">@item.NSX</td>
                            </tr>
                            <tr>
                                <th scope="row">Expire Date</th>
                                <td id="content-product">@item.HSD</td>
                            </tr>
                            <tr>
                                <th scope="row">Total Amount</th>
                                <td id="content-product">@item.TongSoLuong</td>
                                <td>
                                    <div class="btnEdit">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.MatHangID }, new { @class = "btn-edit" })
                                    </div>
                                </td>
                                <td>
                                    <div class="btnDelete">
                                        @Html.ActionLink("Delete", "Delete", new { id = item.MatHangID }, new { @class = "btn-delete" })
                                    </div>
                                </td>
                                
                            </tr>
                        </table>

                    </div>
                </div>
            }

        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            function Contains(text_one, text_two) {
                if (text_one.indexOf(text_two) != -1) return true;
            }
            $("#Search").keyup(function () {
                var searchText = $("#Search").val().toLowerCase();
                $(".row").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchText)) {
                        $(this).hide();
                    } else {
                        $(this).show();
                    }
                })
            })
        })
    </script>
</body>
</html>


